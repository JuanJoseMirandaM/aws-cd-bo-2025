  "license": "MIT",
  "author": {
    "name": "JuanJoseMiranda",
    "url": "https://github.com/JuanJoseMirandaM"
  },
  "type": "module",
  "scripts": {
    "astro": "astro",
    "build": "astro check && astro build",
    "dev": "astro dev",
    "lint:fix": "eslint --cache --fix ./",
    "prepare": "simple-git-hooks",
    "preview": "astro preview",
    "release": "standard-version"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged && pnpm ls-lint",
    "commit-msg": "pnpm commitlint -c -e ${1}"
  },
  "lint-staged": {
    "./**/*.{js,mjs,cjs}": [
      "pnpm lint:fix"
    ],
    "./**/*.ts": [
      "pnpm lint:fix"
    ],
    "./src/**/*.astro": [
      "pnpm lint:fix"
    ],
    "./src/**/*.{jsx,tsx}": [
      "pnpm lint:fix"
    ]
  },
  "dependencies": {
    "@fontsource-variable/inconsolata": "^5.2.5",
    "@fontsource-variable/onest": "^5.2.7",
    "astro": "^5.7.10",
    "class-variance-authority": "^0.7.1",
    "embla-carousel": "^8.6.0",
    "embla-carousel-autoplay": "^8.6.0",
    "sharp": "^0.34.1"
  },
  "devDependencies": {
    "@astrojs/check": "^0.9.4",
    "@commitlint/cli": "^19.8.0",
    "@commitlint/config-conventional": "^19.8.0",
    "@eslint/js": "^9.26.0",
    "@playform/compress": "^0.1.9",
    "@playform/inline": "^0.1.2",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "astro-compressor": "^1.0.0",
    "astro-eslint-parser": "^1.2.2",
    "astro-icon": "^1.1.5",
    "astro-seo-schema": "^5.0.0",
    "astro-sitemap": "^1.0.0",
    "eslint": "^9.25.1",
    "eslint-plugin-astro": "^1.3.1",
    "eslint-plugin-jsonc": "^2.20.0",
    "eslint-plugin-package-json": "^0.31.0",
    "eslint-plugin-perfectionist": "^4.12.3",
    "eslint-plugin-yml": "^1.18.0",
    "globals": "^16.0.0",
    "jsonc-eslint-parser": "^2.4.0",
    "lightningcss": "^1.29.3",
    "lint-staged": "^15.5.1",
    "ls-lint": "^0.1.2",
    "neostandard": "^0.12.1",
    "sanitize.css": "^13.0.0",
    "schema-dts": "^1.1.5",
    "simple-git-hooks": "^2.13.0",
    "typescript": "^5.8.3",
    "yaml-eslint-parser": "^1.3.0"
  }
}
