---
import { Picture } from "astro:assets";
import { cva } from "class-variance-authority";

const cardVariantes = cva(
  'card-container', {
    variants: { position: { left: 'left', right: 'right' } },
    defaultVariants: { position: 'left' }
  }
)

const {
  title,
  description,
  imgSrc,
  position = 'left'
} = Astro.props;
---
<div class:list={[cardVariantes({ position })]}>
  <div class="card">
    <div class="card-img">
      <Picture
        alt="Experiencia AWS"
        fetchpriority="low"
        formats={['avif', 'webp']}
        height={200}
        src={imgSrc}
        width={500}
      />
    </div>
    <div class="card-text">
      <span>{title}</span>
      <p>{description}</p>
    </div>
  </div>
</div>

<style>
  .card-container {
    display: flex;
    width: 100%;

    &.left {
      justify-content: flex-start;
    }

    &.right {
      justify-content: flex-end;

      & .card {
        flex-direction: row-reverse;
      }
    }

    & .card {
      background: var(--background-gradient);
      border-radius: var(--rounded-3xl);
      box-shadow: 0 25px 50px -12px #00000040;
      display: flex;
      height: 295px;
      width: 75%;
      overflow: hidden;

      & .card-img {
        width: 50%;

        img {
          width: 100%;
          height: 100%;
          object-fit: cover;
        }
      }

      & .card-text {
        background-color: rgba(var(--base-200), 0.8);
        display: flex;
        flex-direction: column;
        gap: 16px;
        justify-content: center;
        padding: 32px;
        width: 50%;
        min-height: 100%;

        & span {
          background: var(--orange-gradient);
          -webkit-background-clip: text;
          color: transparent;
          font-size: 30px;
          font-weight: 700;
          margin: 0;
        }

        & p {
          font-size: 14px;
          font-weight: 300;
          margin: 0;
        }
      }
    }
  }

  @media (width<= 768px) {
    .card-container {
      .card  {
        width: 100%;
        position: relative;

        & .card-img {
          width: 100%;
          position: absolute;
          inset: 0;
          filter: blur(2px);
        }

        & .card-text {
          width: 100%;
          z-index: 1;

          & span {
            font-size: 20px;
          }
        }
      }
    }
  }
</style>
