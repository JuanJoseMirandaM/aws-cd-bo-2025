---
import CallToAction from '@components/ui/CallToAction.astro'
import ClickToScroll from '@components/ui/ClickToScroll.astro'
import { CTAS } from '@data/constants'
import letters from '@images/assets/aws-letters.jpg'
import { Picture } from "astro:assets";
---
<section class="parallax-container" id="como-participar">
  <div class="layer">
    <Picture
      alt="Comunity Day Letras"
      class="image"
      fetchpriority="low"
      formats={['avif', 'webp']}
      height={767}
      src={letters}
      width={1200}
    />
  </div>
  <div class="parallax-cta">
    {
      CTAS.map(
        ({ label, description, url, variant, descriptionWeight }, index: number) => (
          <>
            <CallToAction
              callToActionDescription={description}
              callToActionLabel={label}
              callToActionUrl={url}
              descriptionWeight={descriptionWeight}
              variant={variant}
            />
            {index < CTAS.length - 1 && <span class="separator" />}
          </>
        )
      )
    }
  </div>
  <ClickToScroll
    href="#informacion"
    label="Ir a la informaciÃ³n"
  />
</section>

<style>
  .parallax-container {
    display: flex;
    flex-direction: column;
    width: 100%;
    max-width: 1536px;
    margin: auto;
    padding-block: 48px;
    padding-inline: 32px;
    text-align: center;
    position: relative;
    gap: 24px;

    @media (width >= 1200px) {
      padding-block: 520px 200px;
      padding-inline: 0;
      gap: 0;
    }

    & .layer {
      img {
        position: absolute;
        inset: 0;
        mask-image:
          linear-gradient(to top, transparent, black 100%),
          linear-gradient(to bottom, transparent, black 20%),
          linear-gradient(to left, transparent, black 20%),
          linear-gradient(to right, transparent, black 20%);
        mask-composite: intersect;
        margin: 32px auto 0 auto;
        z-index: -1;
      }
    }

    & .parallax-cta {
      display: flex;
      justify-content: space-between;
      height: 100%;
      width: 100%;
      gap: 1.5rem;
      padding-block: 72px;

      & .separator {
        width: 1px;
        background-color: var(--stone-700);
        margin: 0 1.5rem;
      }
    }
  }

  @media (width <= 1024px) {
    .parallax-container {
      & .layer {
        & img {
          height: 100%;
          object-fit: cover;
          opacity: 0.3;
        }
      }

      & .parallax-cta {
        display: flex;
        flex-direction: column;
        align-items: center;
        padding-block: 48px;

        & .separator {
          width: 100%;
          height: 1px;
          margin: 0;
        }
      }
    }
  }
</style>
