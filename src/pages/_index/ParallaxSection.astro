---
import CallToAction from '@components/ui/CallToAction.astro'
import ClickToScroll from '@components/ui/ClickToScroll.astro'
import {CTAS} from '@data/constants'
import letters from '@images/assets/aws-letters.jpg'
import {Picture} from "astro:assets";
---
<style>
  .parallax-container {
    min-height: 100dvh;
    padding-top: 420px;
    gap: 0;
    text-align: center;
    position: relative;

    & .layer {
      img {
        position: absolute;
        inset: 0;
        mask-image: linear-gradient(to top, transparent, black 100%),
        linear-gradient(to bottom, transparent, black 20%),
        linear-gradient(to left, transparent, black 20%),
        linear-gradient(to right, transparent, black 20%);
        mask-composite: intersect;
        margin: 32px auto 0 auto;
        z-index: -1;
      }
    }

    & .parallax-cta {
      display: flex;
      justify-content: space-between;
      height: 100%;
      width: 100%;
      gap: 1.5rem;
      padding-block: 72px;

      & .separator {
        width: 1px;
        background-color: var(--stone-700);
        margin: 0 1.5rem;
      }
    }
  }

  @media (max-width: 1024px) {
    .parallax-container {
      padding-top: 2rem;
      gap: 24px;

      & .layer {
        & img {
          height: 100%;
          object-fit: cover;
          opacity: 0.3;
        }
      }

      & .parallax-cta {
        display: flex;
        flex-direction: column;
        align-items: center;
        padding-block: 16px;

        & .separator {
          width: 100%;
          height: 1px;
          margin: 0;
        }
      }
    }
  }
</style>

<section class="container parallax-container" id="como-participar">
  <div class="layer">
    <Picture
      alt="Comunity Day Letras"
      class="image"
      fetchpriority="low"
      formats={['avif', 'webp']}
      height={767}
      src={letters}
      width={1200}
    />
  </div>
  <div class="parallax-cta">
    {
      CTAS.map(
        ({label, description, url, variant, descriptionWeight, type}, index: number) => (
          <>
            <CallToAction
              callToActionDescription={description}
              callToActionLabel={label}
              callToActionType={type}
              callToActionUrl={url}
              descriptionWeight={descriptionWeight}
              variant={variant}
            />
            {index < CTAS.length - 1 && <span class="separator"/>}
          </>
        )
      )
    }
  </div>
  <ClickToScroll
    href="#venue"
    label="Ir a la informaciÃ³n"
  />
</section>
