---
import ClickToScroll from '@components/ui/ClickToScroll.astro'
import Countdown from '@components/ui/Countdown.astro'
import logo from '@images/assets/awscd-bo-logo.png'
import { Picture } from 'astro:assets'
---

<header>
  <Picture
    alt="AWSCD Bolivia Logo"
    class="logo"
    fetchpriority="high"
    formats={['avif', 'webp']}
    height={122}
    loading="eager"
    src={logo}
    width={600}
  />

  <article class="hero-description">
    <h1>20 de Septiembre 2025 - Cochabamba</h1>
    <h3>¡No te pierdas la 2da Edición del AWS Community Day Bolivia!</h3>
  </article>

  <Countdown targetDate="2025-09-20T08:00:00" />

  <ClickToScroll
    href="#como-participar"
    label="Como puedo participar"
  />
</header>

<style>
  header {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    gap: 56px;
    min-height: 100dvh;
    padding: 108px 72px 0;
    position: relative;

    @media (width <= 375px) {
      padding: 48px 24px 0;
    }

    & .hero-description {
      text-align: center;

      & h1 {
        font-size: 2.5rem;
        margin: 12px;
      }

      & h3 {
        font-weight: 300;
        margin: 0;
      }
    }
  }

  @media (width <= 1024px) {
    header {
      padding: 50px 48px 0;

      & .hero-description {
        padding: 24px 0;

        & h1 {
          font-size: 24px;
        }

        & h3 {
          font-size: 16px;
        }
      }
    }
  }
</style>
